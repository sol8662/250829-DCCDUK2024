import os
import glob
import xml.etree.ElementTree as ET
from collections import Counter

# ë¼ë²¨ í´ë” ê²½ë¡œ
label_folder = "/content/DCC2024/Training/label"

# í´ë” ì•ˆ ëª¨ë“  XML íŒŒì¼ ê°€ì ¸ì˜¤ê¸°
xml_files = glob.glob(os.path.join(label_folder, "*.xml"))

# ëª¨ë“  ê°ì²´ ì´ë¦„ ì €ì¥ ë¦¬ìŠ¤íŠ¸
all_labels = []

for xml_file in xml_files:
    tree = ET.parse(xml_file)
    root = tree.getroot()

    for obj in root.findall("object"):
        name = obj.find("name").text.strip()
        all_labels.append(name)

# Counter ë¡œ ê°œìˆ˜ ì„¸ê¸°
label_counts = Counter(all_labels)

# âœ… ê²°ê³¼ ì¶œë ¥
print("ğŸ“Š ë¼ë²¨ í†µê³„")
for label, count in label_counts.items():
    print(f"{label}: {count} ê°œ")

print("\nì´ ë¼ë²¨ ì¢…ë¥˜ ìˆ˜:", len(label_counts))
