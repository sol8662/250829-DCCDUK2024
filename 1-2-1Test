import os
import glob
import xml.etree.ElementTree as ET

# ë¼ë²¨ í´ë”
label_folder = "/content/DCC2024/Validation(Test)/label"

# í´ë” ì•ˆ ëª¨ë“  XML íŒŒì¼
xml_files = glob.glob(os.path.join(label_folder, "*.xml"))

# ë¼ë²¨ ì¢…ë¥˜ ì €ì¥ìš© set (ì¤‘ë³µ ì œê±°)
label_set = set()

for xml_file in xml_files:
    tree = ET.parse(xml_file)
    root = tree.getroot()

    for obj in root.findall("object"):
        name = obj.find("name").text.strip()
        label_set.add(name)

# âœ… ê²°ê³¼ ì¶œë ¥
print("ğŸ“Š object ë¼ë²¨ ì¢…ë¥˜")
for label in sorted(label_set):
    print("-", label)

print("\nì´ object ì¢…ë¥˜ ê°œìˆ˜:", len(label_set))
